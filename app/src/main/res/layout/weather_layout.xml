<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:src="@drawable/ic_search_black_24dp" />
<!--        app:srcCompat="@drawable/ic_search_black_24dp" -->

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="10dp"
        android:id="@+id/country_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/city_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/country_text"
        android:textSize="40sp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/city_text"
        android:textStyle="bold"
        android:textSize="85dp" />




    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/temp_min_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/temp_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/temp_max_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/temp_min_text"
        android:textSize="20sp" />



    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/temp_max_text"
        android:textSize="20sp" />





    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/weather_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/description_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/humidity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/weather_type_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/pressure_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/humidity_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/pressure_text"
        android:textSize="20sp" />


    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/locations_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/icon_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/yourcity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/locations_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/yourstate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/yourcity_text"
        android:textSize="20sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-light"
        android:layout_margin="5dp"
        android:id="@+id/yourcountry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/yourstate_text"
        android:textSize="20sp" />

</RelativeLayout>